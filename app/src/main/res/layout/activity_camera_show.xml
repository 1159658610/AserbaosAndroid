<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.aserbao.aserbaosandroid.opengl.openGlCamera.simpleCameraOpengl.simpleCamera.CameraShowActivity">
    <Button
        android:onClick="btn_camera_surface_view"
        android:textAllCaps="false"
        android:text="SurfaceView显示Camera数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:onClick="btn_camera_texture_view"
        android:textAllCaps="false"
        android:text="TextureView显示Camera数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
