<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aserbao.aserbaosandroid.media.MediaActivity">
    <Button
        android:onClick="btn_audio_record_activity"
        android:text="audio_record"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button"
        android:onClick="btn_video_view"
        android:text="videoView"
        android:textAllCaps="false"/>
    <Button
        android:layout_toRightOf="@+id/button"
        android:textAllCaps="false"
        android:id="@+id/btn_media_player"
        android:onClick="btn_media_player"
        android:text="MediaPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>
